<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_vcircle_comment_user_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/test_userphoto" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">


            <TextView
                android:id="@+id/item_vcircle_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:text="悠久之翼"
                android:textColor="#444"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_vcircle_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_vcircle_comment_user_name"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:text="好评,哈哈哈哈"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_vcircle_comment_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_vcircle_comment_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="2015年1月2日 21:22:22"
                android:textColor="#668"
                android:textSize="11sp" />
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
