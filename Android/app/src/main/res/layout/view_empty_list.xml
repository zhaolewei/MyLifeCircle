<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_empty_list_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/empty_list_bg"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:src="@drawable/icon_list_empty" />

    <TextView
        android:id="@+id/empty_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_list_bg"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:paddingBottom="110dp"
        android:text="没有同步的数据,点击刷新"
        android:textColor="@color/color_text_hide"
        android:textSize="13sp" />

</RelativeLayout>